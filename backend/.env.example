# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/volunteer-hub

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Civic Auth Configuration (Replace with your actual Civic Auth credentials)
CIVIC_AUTH_CLIENT_ID=your_civic_auth_client_id
CIVIC_AUTH_CLIENT_SECRET=your_civic_auth_client_secret
CIVIC_AUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# JWT Configuration (for additional security if needed)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# File Upload Configuration (if implementing file uploads)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000

# Security Configuration
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your_session_secret_change_this_in_production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100